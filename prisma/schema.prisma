// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  items     Item[]
}
model Item {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  user    User?    @relation(fields: [userId], references: [id])
  userId  Int?
}