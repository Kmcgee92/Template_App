generator client {
  provider = "prisma-client-js"
}

/// 
datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  items    Item[]
}

model Item {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  userId    Int?
  completed Boolean
  user      User?   @relation(fields: [userId], references: [id])
}
